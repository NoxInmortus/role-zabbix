# {{ ansible_managed }}

PidFile={{ zabbix_agent_pidfile }}
LogFile={{ zabbix_logfile }}
LogFileSize={{ zabbix_logfilesize }}
DebugLevel={{ zabbix_agent_debuglevel }}
Server={{ zabbix_agent_servers|join(',') }}
ServerActive={{ zabbix_agent_servers_active|join(',') }}
ListenPort={{ zabbix_agent_listenport }}
Hostname={{ zabbix_agent_hostname }}
Timeout={{ zabbix_agent_timeout }}
Include={{ zabbix_conf_include }}
EnableRemoteCommands={{ zabbix_agent_remotecommands }}
LogRemoteCommands={{ zabbix_agent_logremotecommands }}
StartAgents={{ zabbix_agent_startagents }}

# TLS
TLSConnect={{ zabbix_agent_tlsconnect|lower }}
TLSAccept={{ zabbix_agent_tlsaccept|lower }}
{% if zabbix_agent_psksecret is defined and zabbix_agent_psksecret != '' %}
TLSPSKFile={{ zabbix_tls_pskfile }}
TLSPSKIdentity={{ zabbix_agent_pskid }}
{% endif %}
